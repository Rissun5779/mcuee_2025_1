% === 原始訊號 x(t) ===
% 定義時間軸
t = -5:0.01:5;
% 建立訊號 x(t)
x = zeros(size(t));
x(t >= 0 & t <= 1) = 1;
x(t > 1 & t <= 2) = -t(t > 1 & t <= 2) + 2;

% === 訊號變換：使用內插法 ===

% 1. 時間平移：x(t+1)
% 新的時間軸為 t+1，但我們需要找回原始訊號在 (t-1) 上的值
t_new_1 = t - 1;
x_shift = interp1(t, x, t_new_1, 'linear', 0);

figure;
plot(t, x_shift, 'linewidth', 2);
title('1. Time Shift: x(t+1) using Interpolation');
xlabel('t'); ylabel('x(t+1)'); grid on; ylim([-0.5 1.5]);

% 2. 時間反轉與平移：x(-t+1)
% 新的時間軸為 -t+1，我們需要找回原始訊號在 (-t+1) 上的值
t_new_2 = -t + 1;
x_reverse_shift = interp1(t, x, t_new_2, 'linear', 0);

figure;
plot(t, x_reverse_shift, 'linewidth', 2);
title('2. Time Reversal & Shift: x(-t+1) using Interpolation');
xlabel('t'); ylabel('x(-t+1)'); grid on; ylim([-0.5 1.5]);

% 3. 時間縮放：x(3/2*t)
t_new_3 = (3/2) * t;
x_scale = interp1(t, x, t_new_3, 'linear', 0);

figure;
plot(t, x_scale, 'linewidth', 2);
title('3. Time Scaling: x(3/2t) using Interpolation');
xlabel('t'); ylabel('x(3/2t)'); grid on; ylim([-0.5 1.5]);

% 4. 綜合變換：x(3/2*t+1)
t_new_4 = (3/2) * t + 1;
x_combined = interp1(t, x, t_new_4, 'linear', 0);

figure;
plot(t, x_combined, 'linewidth', 2);
title('4. Combined Transformation: x(3/2t+1) using Interpolation');
xlabel('t'); ylabel('x(3/2t+1)'); grid on; ylim([-0.5 1.5]);
